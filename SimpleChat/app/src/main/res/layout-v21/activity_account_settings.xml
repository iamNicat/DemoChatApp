<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.account_settings.AccountSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_change_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@android:color/black"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:focusable="true" />

        <EditText
            android:id="@+id/setting_new_username"
            android:background="@drawable/rounded_edittext_register"
            android:layout_gravity="center"
            android:padding="10dp"


            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="New Name" />
        <EditText
            android:id="@+id/setting_new_phone"
            android:background="@drawable/rounded_edittext_register"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Phone number" />
        <Button
            android:id="@+id/btn_change_user_info"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="Save new User Info"
            />

        <EditText
            android:id="@+id/setting_current_password"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext_register"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Current password" />

        <EditText
            android:id="@+id/setting_new_password"
            android:background="@drawable/rounded_edittext_register"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="New password" />

        <EditText
            android:id="@+id/setting_confirm_password"
            android:background="@drawable/rounded_edittext_register"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Confirm password" />

        <Button
            android:id="@+id/btn_change_password"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save new password"
            android:textColor="@android:color/white"
            />



    </LinearLayout>
    <ProgressBar
        android:id="@+id/setting_progress_bar"
        style="?android:attr/actionBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

</RelativeLayout>